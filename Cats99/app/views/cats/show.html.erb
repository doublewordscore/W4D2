<h1> <%= @cat.name %> </h1>

<table border ="1", bgcolor="#A9DFBF">
  <tr>
    <td>Birth Date</td>
    <td><%= @cat.birth_date %></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @cat.description %></td>
  </tr>

</table>

<p>Dates</p>
<% CatRentalRequest.where(cat_id: @cat.id).order(:start_date).each do |request| %>
  <%= request.start_date %> to <%= request.end_date %>
  <br>
<% end %>
